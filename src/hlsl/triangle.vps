struct vs_output {
  float4 position : SV_POSITION;
  float4 color : COLOR;
};

vs_output vertex_shader(float4 position : POSITION, float4 color : COLOR) {
  vs_output output;
	output.position = position;
  output.color = color;
	return output;
}

float4 pixel_shader(vs_output input) : SV_TARGET {
  return input.color;
}
